<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.epam.education.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John"/>
    </bean>
    <bean id="eventLogger" class="com.epam.education.ConsoleEventLogger" />
    <bean id="app" class="com.epam.education.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>
    <bean id="event" class="com.epam.education.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
    <bean id="fileLogger" class="com.epam.education.FileEventLogger" init-method="init">
        <constructor-arg value="log.txt"/>
    </bean>
    <bean id="cacheFielLogger" class="com.epam.education.CacheFileEventLogger" parent="fileLogger"
          destroy-method="destroy"/>

</beans>